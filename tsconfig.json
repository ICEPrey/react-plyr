{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "dom"
    ],
    "rootDirs": ["src", "stories"],
    "baseUrl": "./src",
    "paths": {
      "@constants": ["constants"],
      "@utils": ["utils"]
    }
  },
  "include": [
    "./src",
    "./stories"
  ],
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "dist",
    "build",
    "node_modules",
    "config",
    "webpack",
    "jest"
  ],
  "files": [
    "custom.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
