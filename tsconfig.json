{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "rootDirs": ["src", "stories"],
    "baseUrl": "./src",
    "paths": {
      "@actions*": ["actions*"],
      "@adapters*": ["adapters*"],
      "@components*": ["components*"],
      "@config*": ["config*"],
      "@constants*": ["constants*"],
      "@helpers*": ["helpers*"],
      "@store*": ["store*"],
      "@stylesheets*": ["stylesheets*"],
      "@models*": ["models*"],
      "@actions": ["actions"],
      "@adapters": ["adapters"],
      "@components": ["components"],
      "@config": ["config"],
      "@constants": ["constants"],
      "@helpers": ["helpers"],
      "@store": ["store"],
      "@stylesheets": ["stylesheets"],
      "@models": ["models"]
    },
  },
  "include": [
    "./src",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "node_modules",
    "config",
    "webpack",
    "jest"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
