{
  "extends": [
    "airbnb",
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-useless-constructor": "off",
    "eofline": true,
    "jsx-no-lambda": false,
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "semicolon": [true, "always", "ignore-interfaces"],
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ]
  }
}
